<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity"    >

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="cursive"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/iudacity" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/company_info"
            android:autoLink="map"
            android:textColor="#DAA520"
            android:fontFamily="cursive"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_marginBottom="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/company_info1"
            android:autoLink="map"
            android:textColor="#DAA520"
            android:textColorLink="#DAA520"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/company_info2"
            android:textColor="#DAA520"
            android:textColorLink="#DAA520"
            android:textSize="16sp"
            android:autoLink="phone"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/company_info3"
            android:textColor="#DAA520"
            android:textColorLink="#DAA520"
            android:textSize="14sp"
            android:autoLink="web"
            />

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:src="@drawable/iudacityf"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"

                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:src="@drawable/iudacityi"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:src="@drawable/iudacityt"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:src="@drawable/iudacityg"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
